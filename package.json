{
  "name": "@harken/root",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "Harken - Open source SDK and contracts for mobile feedback",
  "repository": {
    "type": "git",
    "url": "https://github.com/thutch-conecrow/harken.git"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "build": "pnpm -r run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm --filter @harkenapp/sdk-react-native test",
    "test:coverage": "pnpm --filter @harkenapp/sdk-react-native test -- --coverage",
    "ci": "pnpm typecheck && pnpm lint && pnpm format:check && pnpm build && pnpm test"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1"
  }
}
